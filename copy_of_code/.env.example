# TRAE AI Production Environment Configuration
# Copy this file to .env.local for development or configure these in your deployment environment

# Core System Configuration
TRAE_MASTER_KEY=your_secure_master_key_here
TRAE_SECRETS_DB=data/secrets.sqlite

# Dashboard Configuration
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=8080
DASHBOARD_DEBUG=false
DASHBOARD_SECRET_KEY=your_secure_dashboard_secret_key_here

# Database Configuration
DATABASE_PATH=trae_ai.db

# Logging Configuration
LOG_LEVEL=INFO

# External API Keys (if needed)
YOUTUBE_API_KEY=your_youtube_api_key_here

# Deployment Environment
NODE_ENV=production
PYTHON_ENV=production

# Security Settings
SECURE_SSL_REDIRECT=true
SESSION_COOKIE_SECURE=true
CSRF_COOKIE_SECURE=true

# Performance Settings
MAX_WORKERS=4
MAX_FILE_SIZE=104857600

# Monitoring and Logging
ENABLE_METRICS=true
METRICS_ENDPOINT=/metrics
HEALTH_CHECK_ENDPOINT=/health