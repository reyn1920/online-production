{
  "security": {
    "ignore-cvss-severity-below": 0.0,
    "ignore-cvss-unknown-severity": false,
    "ignore-vulnerabilities": {
      "reason": "Ignored vulnerabilities with justification",
      "expires": "2025-12-31",
      "vulnerabilities": []
    },
    "continue-on-vulnerability-error": false
  },
  "alert": {
    "ignore-unpinned-requirements": false,
    "ignore-environment-results": false
  },
  "report": {
    "only-report": {
      "vulnerabilities": {
        "cvss-severity": ["critical", "high", "medium"],
        "cvss-score": 4.0
      }
    }
  },
  "scan": {
    "max-depth": 10,
    "exclude": ["tests/*", "venv/*", "node_modules/*", ".git/*"]
  },
  "telemetry": {
    "enabled": false
  }
}
