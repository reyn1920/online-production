    "api_endpoints": {
      "generate_avatar": {
        "method": "POST",
        "endpoint": "/paste/avatar/generate",
        "description": "Generate avatar from paste content",
        "parameters": {
          "content": "string (required) - The paste content",
          "avatar_type": "string (optional) - 'standard' or '3d'",
          "voice_style": "string (optional) - Voice style preset",
          "template": "string (optional) - Avatar template name",
          "quality": "string (optional) - Quality level",
          "language": "string (optional) - Language code",
          "accent": "string (optional) - Accent preference"
        }
      },
      "batch_generate": {
        "method": "POST",
        "endpoint": "/paste/avatar/batch",
        "description": "Generate avatars for multiple pastes",
        "parameters": {
          "pastes": "array (required) - Array of paste objects",
          "config": "object (optional) - Batch configuration"
        }
      },
      "get_suggestions": {
        "method": "POST",
        "endpoint": "/paste/avatar/suggestions",
        "description": "Get avatar suggestions for content",
        "parameters": {
          "content": "string (required) - The paste content"
        }
      },
      "get_templates": {
        "method": "GET",
        "endpoint": "/paste/avatar/templates",
        "description": "Get available avatar templates"
      },
      "create_personality": {
        "method": "POST",
        "endpoint": "/paste/avatar/personality",
        "description": "Create custom avatar personality",
        "parameters": {
          "name": "string (required) - Personality name",
          "traits": "array (required) - Personality traits",
          "voice_config": "object (required) - Voice configuration",
          "visual_config": "object (required) - Visual configuration"
        }
      }
    },

