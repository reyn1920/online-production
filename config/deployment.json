{
  "database_path": {
    "production": "data/secrets.sqlite",
    "staging": "data/secrets_staging.sqlite",
    "development": "data/secrets_dev.sqlite"
  },
  "backup_retention_days": 30,
  "security_checks": {
    "require_master_key": true,
    "validate_permissions": true,
    "check_encryption": true,
    "enforce_secure_file_permissions": true
  },
  "production_requirements": {
    "min_python_version": "3.8",
    "required_packages": ["cryptography", "sqlite3"],
    "environment_variables": ["TRAE_MASTER_KEY"]
  },
  "deployment_settings": {
    "auto_backup": true,
    "validate_before_deploy": true,
    "test_operations_after_deploy": true,
    "cleanup_old_backups": true
  },
  "monitoring": {
    "log_level": "INFO",
    "enable_audit_logging": true,
    "alert_on_failures": true
  },
  "performance": {
    "connection_timeout": 30,
    "max_retry_attempts": 3,
    "backup_compression": false
  }
}
