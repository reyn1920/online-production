# Runtime Environment Configuration
# This file contains runtime-specific environment variables
# IMPORTANT: This file should contain actual secrets for local development only
# For production, use environment variables or secure secret management

# Database Configuration
DATABASE_URL=sqlite:///./app.db

# API Keys (Replace with your actual keys - DO NOT COMMIT REAL KEYS)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Social Media API Configuration
# Global social switch (if your app uses it)
SOCIAL_ENABLED=true

# Twitter API Keys
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret

# Instagram
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token

# YouTube
YOUTUBE_API_KEY=your_youtube_api_key

# Facebook Page
FACEBOOK_ENABLED=true
FACEBOOK_PAGE_ID=your_facebook_page_id
FACEBOOK_PAGE_ACCESS_TOKEN=your_facebook_page_access_token

# LinkedIn (company or personal share)
LINKEDIN_ENABLED=true
LI_ACCESS_TOKEN=your_linkedin_token_here
LINKEDIN_ORG_ID=your_linkedin_org_id_here

# Pinterest
PINTEREST_ENABLED=true
PINTEREST_ACCESS_TOKEN=your_pinterest_token_here
PINTEREST_BOARD_ID=your_pinterest_board_id_here

# Reddit (script app)
REDDIT_ENABLED=true
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here
REDDIT_USERNAME=your_reddit_username_here
REDDIT_PASSWORD=your_reddit_password_here
REDDIT_USER_AGENT=your_reddit_user_agent_here

# Optional Pet Care APIs
DOG_API_KEY=your_dog_api_key_here
CAT_API_KEY=your_cat_api_key_here

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=false

# Security - Generate strong keys (>=32 chars) for production
# Use: python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=generate_your_own_secret_key_here
JWT_SECRET=generate_your_own_jwt_secret_here
TRAE_MASTER_KEY=generate_your_own_master_key_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:5173","https://your-domain.com"]
