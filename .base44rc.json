{
  "version": "1.0.0",
  "project": "Online Production Platform",
  "env": {
    "NODE_ENV": "development",
    "API_PORT": "5000",
    "DASHBOARD_PORT": "8001",
    "PASTE_PORT": "8000",
    "DATABASE_TYPE": "sqlite",
    "DATABASE_PATH": "./data/development.db"
  },
  "rules": {
    "strict_mode": true,
    "max_file_size": 10485760,
    "allowed_extensions": ".js,.jsx,.ts,.tsx,.py,.json,.md"
  },
  "services": {
    "api": {
      "enabled": true,
      "host": "localhost",
      "port": 5000,
      "url": "http://localhost:5000",
      "env": {
        "FLASK_ENV": "development"
      }
    },
    "dashboard": {
      "enabled": true,
      "host": "localhost",
      "port": 8001,
      "url": "http://localhost:8001",
      "env": {
        "DEBUG": "true"
      }
    },
    "paste": {
      "enabled": true,
      "host": "localhost",
      "port": 8000,
      "url": "http://localhost:8000",
      "env": {
        "PASTE_ENV": "development"
      }
    }
  },
  "tasks": [
    {
      "name": "start-api",
      "run": "python3 backend/app.py",
      "cwd": ".",
      "env": {
        "FLASK_ENV": "development"
      }
    },
    {
      "name": "start-dashboard",
      "run": "python3 live_dashboard.py",
      "cwd": "."
    },
    {
      "name": "start-paste",
      "run": "python3 paste_app.py",
      "cwd": "."
    },
    {
      "name": "test",
      "run": "python -m pytest tests/",
      "cwd": ".",
      "timeoutSeconds": 300
    },
    {
      "name": "lint",
      "run": "eslint . --ext .js,.jsx,.ts,.tsx",
      "cwd": ".",
      "timeoutSeconds": 120
    }
  ],
  "deploy": {
    "provider": "netlify",
    "siteId": "production-site-id",
    "buildCommand": "npm run build",
    "outputDir": "dist",
    "functionsDir": "netlify/functions"
  },
  "logging": {
    "level": "info",
    "file": "logs/app.log"
  }
}
